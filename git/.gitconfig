[user]
	name = Bryce White
	email = bryce.white@me.com

[include]
    path = /Users/brycewhite/.config/delta/catppuccin.gitconfig

[core]
	excludesfile = /Users/brycewhite/.gitignore_global
	autocrlf = input
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true # use n and N to move between diff sections
	side-by-side = false
	features = catppuccin-mocha
	true-color = always

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[credential]
	helper = !aws codecommit credential-helper $@
	UseHttpPath = true

[init]
	defaultBranch = main
